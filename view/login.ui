   <string notr="true">/* Nền tổng thể */
QWidget {
    background-color: #fff;
    font-family: &quot;Segoe UI&quot;, Arial, sans-serif;
    font-size: 14px;
}


/* Style cho QLineEdit (ô nhập, ví dụ: username, password) */
QLineEdit {
    background-color: #ffffff;       /* nền trắng */
    border: 2px solid #dfe6e9;         /* viền nhẹ màu xám nhạt */
    border-radius: 10px;               /* bo tròn góc */
    padding: 10px;                    /* khoảng cách bên trong */
    font-size: 16px;
    color: #2d3436;
}

/* Khi ô nhập được focus, thay đổi viền */
QLineEdit:focus {
    border: 2px solid #4A90E2;         /* viền xanh khi chọn */
}

/* Style cho QPlainTextEdit (ô nhập văn bản hoặc hiển thị kết quả) */
QPlainTextEdit {
    background-color: #ffffff;
    border: 2px solid #dfe6e9;
    border-radius: 10px;
    padding: 10px;
    font-size: 16px;
    color: #2d3436;
}

/* Khi QPlainTextEdit được focus */
QPlainTextEdit:focus {
    border: 2px solid #4A90E2;
}

/* Nút đăng nhập màu xanh lá */
QPushButton#loginButton {
    background-color: #2ecc71; /* Xanh lá */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 16px;
}

/* Hover và pressed cho nút đăng nhập */
QPushButton#loginButton:hover {
    background-color: #58d68d; /* Xanh lá nhạt hơn khi hover */
}
QPushButton#loginButton:pressed {
    background-color: #27ae60; /* Xanh lá đậm hơn khi nhấn */
}

/* Nút đăng ký màu xanh dương */
QPushButton#registerButton {
    background-color: #3498db; /* Xanh dương */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 16px;
}

/* Hover và pressed cho nút đăng ký */
QPushButton#registerButton:hover {
    background-color: #5dade2; /* Xanh dương nhạt hơn khi hover */
}
QPushButton#registerButton:pressed {
    background-color: #2980b9; /* Xanh dương đậm hơn khi nhấn */
}

/* QLabel cho thông báo */
QLabel#messageLabel {
    color: red;
    margin-top: 10px;
}

/* Tất cả các widget cơ bản */
QWidget {
    font-family: &quot;Segoe UI&quot;, sans-serif;
    font-size: 24px;
}




